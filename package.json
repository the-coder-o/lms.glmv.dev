{
  "name": "lms-frontend",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "eslint --max-warnings=0 src",
    "prettier": "prettier --write */**/*.{js,jsx,json,ts,tsx,md}",
    "typecheck": "tsc --noEmit --incremental false",
    "format": "prettier -w \"**/*.{js,jsx,ts,tsx,md}\"",
    "format:check": "prettier -c .",
    "prepare": "husky install",
    "types": "tsc --noEmit",
    "shadcn": "npx shadcn-ui@latest",
    "clean": "rimraf .next && rimraf .next/cache && rimraf node_modules",
    "clean:build": "rimraf .next",
    "clean:cache": "rimraf .next/cache",
    "json:server": "npx json-server --watch db.json --port 5001",
    "analyze:build": "ANALYZE=true next build",
    "sort:packages": "node scripts/sort-packages.mjs",
    "check:packages": "node scripts/check-package-versions.mjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "**/*.{json,md,webmanifest}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-accordion": "1.2.0",
    "@radix-ui/react-aspect-ratio": "1.1.0",
    "@radix-ui/react-avatar": "1.1.0",
    "@radix-ui/react-dialog": "1.1.1",
    "@radix-ui/react-icons": "1.3.0",
    "@radix-ui/react-label": "2.1.0",
    "@radix-ui/react-separator": "1.1.0",
    "@radix-ui/react-slot": "1.1.0",
    "@radix-ui/react-switch": "1.1.0",
    "@radix-ui/react-tabs": "1.1.0",
    "@radix-ui/react-toast": "1.2.1",
    "@reduxjs/toolkit": "2.2.7",
    "@svgr/webpack": "8.1.0",
    "@tailwindcss/typography": "0.5.13",
    "@tanstack/react-query": "5.51.21",
    "@tanstack/react-query-devtools": "5.51.21",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "axios": "1.7.3",
    "class-variance-authority": "0.7.0",
    "clsx": "2.1.1",
    "framer-motion": "11.3.24",
    "i18next": "23.12.3",
    "json-server": "1.0.0-beta.1",
    "lucide-react": "0.427.0",
    "next": "14.2.3",
    "next-i18n-router": "5.5.1",
    "next-themes": "0.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-fast-marquee": "1.6.5",
    "react-i18next": "15.0.1",
    "react-redux": "9.1.2",
    "react-resizable-panels": "2.0.23",
    "react-router-i18n": "1.1.1",
    "shaka-player": "4.10.9",
    "tailwind-merge": "2.4.0",
    "tailwindcss": "3.4.8",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@types/js-cookie": "3.0.6",
    "@types/node": "20.14.14",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/tailwindcss": "3.1.0",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-no-secrets": "1.0.2",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-perf": "3.3.2",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "eslint-plugin-tailwindcss": "3.17.4",
    "eslint-plugin-unused-imports": "3.2.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.8",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.5",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
